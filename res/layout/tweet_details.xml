<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:id="@+id/linearlayout_tweet_details"
    		  android:orientation="vertical"
    		  android:layout_width="fill_parent"
    		  android:layout_height="fill_parent"
    		  android:layout_weight="1.0">
    		  
    <TextView android:id="@+id/tweet_details_text_view"
        	  android:textSize="15dip"
        	  android:layout_width="wrap_content"
        	  android:layout_height="wrap_content"
        	  android:textStyle="italic"
        	  android:layout_weight="0"
        	  android:paddingTop="10dp"
        	  android:paddingLeft="8dip"
        	  android:paddingRight="8dip" />
    
    <LinearLayout android:layout_width="fill_parent"
        		  android:layout_height="wrap_content"
        		  android:layout_weight="1.0"
        		  android:paddingTop="60dp"
        		  android:paddingBottom="45dp"
        		  android:orientation="horizontal">
        
        <TextView android:textSize="13dip"
            	  android:layout_width="fill_parent"
            	  android:layout_height="wrap_content"
            	  android:layout_weight="1.0"
            	  android:paddingLeft="4dp"
            	  android:text="@string/tweet_details_time_label"/>
        
        <TextView android:id="@+id/tweet_details_time_view"
            	  android:layout_width="fill_parent"
            	  android:layout_weight="1.0"
            	  android:layout_height="wrap_content"
            	  android:textSize="13dip" />
    </LinearLayout>
    
    <Button android:id="@+id/button_tweet_delete"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:paddingLeft="8dip"
        	android:paddingRight="8dip"
        	android:paddingBottom="15dip"
        	android:text="@string/delete_tweet_button_text"
        	android:onClick="onTweetDeleteClick"
        	android:layout_weight="0"/>
    
</LinearLayout>