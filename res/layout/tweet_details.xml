<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:orientation="vertical"
    		  android:padding="8dip"
    		  android:layout_width="fill_parent"
    		  android:layout_height="fill_parent">
    		  
    <TextView android:id="@+id/tweet_details_text_view"
        	  android:textSize="15dip"
        	  android:layout_width="wrap_content"
        	  android:layout_height="wrap_content"
        	  android:textStyle="italic"
        	  android:paddingTop="10px" />
    
    <LinearLayout android:layout_width="fill_parent"
        		  android:layout_height="wrap_content"
        		  android:paddingTop="60px"
        		  android:paddingBottom="45px"
        		  android:orientation="horizontal">
        
        <TextView android:textSize="13dip"
            	  android:layout_width="fill_parent"
            	  android:layout_weight="1.0"
            	  android:layout_height="wrap_content"
            	  android:paddingLeft="4px"
            	  android:text="@string/tweet_details_time_label"/>
        
        <TextView android:id="@+id/tweet_details_time_view"
            	  android:layout_width="fill_parent"
            	  android:layout_weight="1.0"
            	  android:layout_height="wrap_content"
            	  android:textSize="13dip" />
    </LinearLayout>
    
    <Button android:id="@+id/button_tweet_delete"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/delete_tweet_button_text"/>
    
</LinearLayout>